                                FontFamily="Consolas"
                                FontSize="10pt" 
                                WordWrap="True"
                                ShowLineNumbers="true" 
                                LineNumbersForeground="#FF2B91AF"
                                HorizontalScrollBarVisibility="Hidden"
                                VerticalScrollBarVisibility="Hidden" />
