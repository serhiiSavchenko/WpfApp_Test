                    <TextBlock HorizontalAlignment="Left" Margin="10,280,0,0" TextWrapping="Wrap" Text="Iniciály uživatele" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="101,281,0,0" TextWrapping="Wrap" Text="(vice uživatelů možno oddálit &quot;,&quot;)" VerticalAlignment="Top" Foreground="#FFBBBBBB" FontSize="10"/>
                    <TextBox x:Name="UserInitials" Text="{Binding QuickSQLSettings.UserInitials}"  HorizontalAlignment="Left" Margin="345,281,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="79" Height="16"/>
                    <Grid Width="415"
                          MinWidth="400"
                          MinHeight="15.5"
                          HorizontalAlignment="Left"
                          Margin="10,301,0,0" 
                          VerticalAlignment="Top" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton x:Name="CreatedBy" 
                            IsChecked="{Binding QuickSQLSettings.CreatedBy}"
