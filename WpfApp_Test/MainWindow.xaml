                        <TextBlock Margin="46,3,34,3" TextWrapping="Wrap" Text="Vytvořeno " Grid.Column="1"/>
                        <TextBlock Margin="75,3,19,3" TextWrapping="Wrap" Text="Uloženo" Grid.Column="2"/>
                        <TextBlock HorizontalAlignment="Left" Margin="75,151,0,0" TextWrapping="Wrap" Text="Uloženo" VerticalAlignment="Top" Grid.Column="2"/>
                    </Grid>
                    <ComboBox 
                        x:Name="Center" 
                        ItemsSource="{Binding QuickSQLSettings.CenterItems}" 
                        SelectedValue="{Binding QuickSQLSettings.Center}"
