                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton x:Name="DocDate" 
                            IsChecked="{Binding QuickSQLSettings.DocDate}"
                            Content="" HorizontalAlignment="Left" Margin="90,5,0,0" VerticalAlignment="Top" GroupName="DokladyRadio"/>
                        <RadioButton x:Name="Created" 
                            IsChecked="{Binding QuickSQLSettings.Created}"
                            Content="" HorizontalAlignment="Left" Margin="109,5,0,147" Grid.Column="1" GroupName="DokladyRadio"/>
                        <RadioButton x:Name="Saved"
                            IsChecked="{Binding QuickSQLSettings.Saved}"
