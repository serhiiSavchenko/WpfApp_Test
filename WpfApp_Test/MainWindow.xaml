                        <TextBlock TextWrapping="Wrap" Text="Editoval" Grid.Column="1" Margin="108,0,57,0"/>
                    </Grid>
                    <Grid Width="416"
                          MinWidth="400"
                          MinHeight="18"
                          HorizontalAlignment="Left"
                          Margin="10,321,0,0"
                          VerticalAlignment="Top" 
                          Height="19" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Left" Margin="75,151,0,0" TextWrapping="Wrap" Text="Uloženo" VerticalAlignment="Top" Grid.Column="2"/>
                        <CheckBox x:Name="Resolved"
                            IsChecked="{Binding QuickSQLSettings.Resolved}"
                            Content="" HorizontalAlignment="Left" Margin="62,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Vyřízeno" VerticalAlignment="Center"/>
                        <CheckBox x:Name="Transferred"
                            IsChecked="{Binding QuickSQLSettings.Transferred}"
                            Content="" HorizontalAlignment="Left" Margin="72,0,0,0" VerticalAlignment="Center" Grid.Column="1"/>
                        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Přeneseno" VerticalAlignment="Center" Grid.Column="1" Margin="6,0,0,0"/>
                        <CheckBox x:Name="PermanentDoc"
                            IsChecked="{Binding QuickSQLSettings.PermanentDoc}"
                            Content="" HorizontalAlignment="Left" Margin="89,0,0,0" VerticalAlignment="Center" Grid.Column="2"/>
                        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Trvalý doklad" VerticalAlignment="Center" Grid.Column="2" Margin="15,0,0,0" IsEnabled="False"/>
                        <CheckBox x:Name="Storno"
                            IsChecked="{Binding QuickSQLSettings.Storno}"
                            Content="" HorizontalAlignment="Left" Margin="108,0,0,0" VerticalAlignment="Center" Grid.Column="3"/>
                        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Storno" VerticalAlignment="Center" Grid.Column="3"/>
                    </Grid>
                    <TextBlock HorizontalAlignment="Left" Margin="10,340,0,0" TextWrapping="Wrap" Text="(Zatrženo = ano, nezatrženo = ne)" VerticalAlignment="Top" Foreground="#FFBBBBBB" FontSize="10"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,371,0,0" TextWrapping="Wrap" Text="Dotaz z program POHODA, nebo WHERE" VerticalAlignment="Top"/>
                    <TextBox 
                        Grid.Column="0" 
                        Margin="10,392,0,10" 
                        x:Name="SQLFromPohoda" 
                        Text="{Binding QuickSQLSettings.SQLFromPohoda}"
                        VerticalScrollBarVisibility="Visible" 
                        TextWrapping="Wrap" HorizontalAlignment="Left" Width="409"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,9,0,0" TextWrapping="Wrap" Text="Kontakty" VerticalAlignment="Top" FontWeight="Bold" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" Text="Pole pro email" VerticalAlignment="Top" Grid.Column="1"/>
                    <ComboBox 
                        x:Name="FieldForEmail" 
                        ItemsSource="{Binding QuickSQLSettings.FieldForEmailItems}" 
                        SelectedValue="{Binding QuickSQLSettings.FieldForEmail}"
                        HorizontalAlignment="Left" Margin="201,38,0,0" VerticalAlignment="Top" Width="79" Height="16" Grid.Column="1"/>
                    <TextBox x:Name="EmailField" Text="{Binding QuickSQLSettings.EmailField}" HorizontalAlignment="Left" Margin="201,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="79" Height="16" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,62,0,0" TextWrapping="Wrap" Text="Zadejte volitelné pole, nebo konkrétní email" VerticalAlignment="Top" Foreground="#FFBBBBBB" FontSize="9" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,88,0,0" TextWrapping="Wrap" Text="Pole pro GSM" VerticalAlignment="Top" Grid.Column="1"/>
                    <ComboBox 
                        x:Name="FieldForGSM" 
                        ItemsSource="{Binding QuickSQLSettings.FieldForGSMItems}" 
                        SelectedValue="{Binding QuickSQLSettings.FieldForGSM}"
                        HorizontalAlignment="Left" Margin="201,88,0,0" VerticalAlignment="Top" Width="79" Height="16" Grid.Column="1"/>
                    <TextBox x:Name="GSMField" Text="{Binding QuickSQLSettings.GSMField}" HorizontalAlignment="Left" Margin="201,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="79" Height="16" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,112,0,0" TextWrapping="Wrap" Text="Zadejte volitelné pole, nebo konkrétní mobil" VerticalAlignment="Top" Foreground="#FFBBBBBB" FontSize="9" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,141,0,0" TextWrapping="Wrap" Text="Faktury" VerticalAlignment="Top" FontWeight="Bold" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,164,0,0" TextWrapping="Wrap" Text="Po splatnosti" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="Overdue"
                              IsChecked="{Binding QuickSQLSettings.Overdue}"
                              Content="" HorizontalAlignment="Left" Margin="265,166,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,189,0,0" TextWrapping="Wrap" Text="Po tolerované splatnosti" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="ToleratedOverdue"
                              IsChecked="{Binding QuickSQLSettings.ToleratedOverdue}"
                              Content="" HorizontalAlignment="Left" Margin="265,191,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,216,0,0" TextWrapping="Wrap" Text="Tolerance K likvidaci (Kč)" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBox x:Name="LiquidationTolerance"
                             Text="{Binding QuickSQLSettings.LiquidationTolerance}" HorizontalAlignment="Left" Margin="201,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="79" Height="16" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,258,0,0" TextWrapping="Wrap" Text="Akce po odeslání" VerticalAlignment="Top" FontWeight="Bold" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="111,259,0,0" TextWrapping="Wrap" Text="(after)" VerticalAlignment="Top" Foreground="#FFBBBBBB" FontSize="10" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,279,0,0" TextWrapping="Wrap" Text="Zapsat datum do událostí dokladu" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="WriteDateToDocEvent"
                              IsChecked="{Binding QuickSQLSettings.WriteDateToDocEvent}"
                              Content="" HorizontalAlignment="Left" Margin="265,280,0,0" VerticalAlignment="Top" Grid.Column="1" Width="17"/>
                    <TextBlock HorizontalAlignment="Left"
                               Margin="10,301,0,0" TextWrapping="Wrap" Text="Zapsat datum do volitelného pole" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBox x:Name="WriteDateToOptField" Text="{Binding QuickSQLSettings.WriteDateToOptField}" HorizontalAlignment="Left" Margin="201,301,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="79" Height="16" Grid.Column="1"/>
                    <Button Grid.Column="2" Content="Spustit pravidlo" HorizontalAlignment="Left" Margin="10,301,0,0" VerticalAlignment="Top" Height="16" FontSize="10" Width="101"/>
                    <Button Grid.Column="2" Content="Test pravidla" HorizontalAlignment="Left" Margin="188,301,0,0" VerticalAlignment="Top" Height="16" FontSize="10" Width="101"/>

                </Grid>

            </TabItem>
            <TabItem Header="SQL dotazy">
                <Grid>
                    <!-- Left Section -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="88*"/>
                        <ColumnDefinition Width="123*"/>
                        <ColumnDefinition Width="127*"/>
                        <ColumnDefinition Width="675*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Section Content -->
                    <Grid Margin="10,10,10,10" Grid.ColumnSpan="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"/>
                            <RowDefinition Height="22*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Podkladovy select:" Grid.Row="0" MinHeight="20"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="1">
                            <avalonEdit:TextEditor
                                xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"  
                                Name="MyAvalonEdit"
                                avalonEdit:BindingGroup="{Binding SQLSettings.PodkladovySelect, ValidatesOnDataErrors=True}"
                                FontFamily="Consolas"
                                FontSize="10pt" 
                                WordWrap="True"
                                ShowLineNumbers="true" 
                                LineNumbersForeground="#FF2B91AF"
                                HorizontalScrollBarVisibility="Hidden"
                                VerticalScrollBarVisibility="Hidden" VerticalContentAlignment="Stretch" MinHeight="362" />
                        </Border>
                        <!-- You can adjust the height as required -->
                    </Grid>

                    <!-- Right Section Content -->
                    <Grid Grid.Column="3" Margin="10,10,10,21">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition/>
                            <RowDefinition Height="0.35*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Text="After select"/>
                        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="0,22,0,0">
                            <avalonEdit:TextEditor
                            xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"  
                            Name="AfterSelectAvalon"
                            avalonEdit:BindingGroup="{Binding SQLSettings.AfterSelect, ValidatesOnDataErrors=True}"
                            FontFamily="Consolas"
                            FontSize="10pt" 
                            WordWrap="True"
                            ShowLineNumbers="true" 
                            LineNumbersForeground="#FF2B91AF"
                            HorizontalScrollBarVisibility="Hidden"
                            VerticalScrollBarVisibility="Hidden" Margin="0,1,0,1" />
                        </Border>
                        <!-- Adjust height as needed -->
                        <TextBlock Grid.Row="1" Margin="0,10,0,5" Text="Soupiska select"/>
                        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="0,32,0,0">
                            <avalonEdit:TextEditor
                            xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"  
                            Name="SoupiskaSelectAvalon"
                            avalonEdit:BindingGroup="{Binding SQLSettings.SoupiskaSelect, ValidatesOnDataErrors=True}"
                            FontFamily="Consolas"
                            FontSize="10pt" 
                            WordWrap="True"
                            ShowLineNumbers="true" 
                            LineNumbersForeground="#FF2B91AF"
                            HorizontalScrollBarVisibility="Hidden"
                            VerticalScrollBarVisibility="Hidden" Margin="0,1,0,1" />
                        </Border>
                        <!-- Adjust height as needed -->

                        <StackPanel Grid.Row="2" Orientation="Vertical" VerticalAlignment="Bottom" Margin="0,0,0,5">
                            <TextBlock Text="PDF" FontWeight="Bold"/>
                            <TextBlock Margin="0,10,0,5" Text="Agenda"/>
                            <ComboBox 
                                ItemsSource="{Binding SQLSettings.soupiskaSelectItems, ValidatesOnDataErrors=True}"
                                SelectedValue="{Binding SQLSettings.soupiskaSelect, ValidatesOnDataErrors=True}"/>
                        </StackPanel>

