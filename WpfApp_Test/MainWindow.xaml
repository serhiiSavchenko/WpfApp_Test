                    <ComboBox 
                        x:Name="Order" 
                        ItemsSource="{Binding QuickSQLSettings.OrderItems}" 
                        SelectedValue="{Binding QuickSQLSettings.Order}"
                        HorizontalAlignment="Left" Margin="345,245,0,0" VerticalAlignment="Top" Width="79" Height="16"/>
