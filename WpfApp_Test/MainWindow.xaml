                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="SMS" HorizontalAlignment="Center" Width="35">
                <Grid Margin="10">
                    <!-- Define rows and columns for the layout -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- Empty column on the left -->
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Odeslat SMS Checkbox -->
                    <CheckBox Content="Odeslat SMS" 
                              Grid.Row="0" 
                              Grid.Column="1" 
                              x:Name="Send"
                              IsChecked="{Binding SMSSettings.Send}"/>

                    <!-- Label 'SMS' aligned to the left -->
                    <TextBlock Text="SMS" FontWeight="Bold" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="1,0,0,0"/>

                    <!-- Buttons aligned to the right -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,5">
                        <Button Content="Přidat variantu" Name="AddVariantButton" Width="130" Click="AddVariantButton_Click"/>
                        <Button Content="Zkopírovat variantu" Margin="5,0" Name="CopyVariantButton" Width="150" Click="CopyVariantButton_Click"/>
                        <Button Content="Odebrat variantu" Margin="5,0" Name="RemoveVariantButton" Width="130" Click="RemoveVariantButton_Click"/>
                    </StackPanel>

                    <!-- Tab Control for 'V1' -->
                    <TabControl Grid.Row="2" Name="VariantsTabControl" Margin="0,10,0,0" Grid.Column="1" 
                                ItemsSource="{Binding SelectedRule.SMSSettings.SMSVariants}">
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding VariantName}" />
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <Grid Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="5*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="292*"/>
                                        <ColumnDefinition Width="Auto" MinWidth="31.226"/>
                                        <ColumnDefinition Width="323*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Název varianty" Grid.Row="0" Grid.Column="0" Margin="10,0,5,5"/>
                                    <TextBox x:Name="VariantName1" 
                                        Grid.Row="0" 
                                        Grid.Column="1" 
                                        Margin="18,0,50,5" 
                                        Text="{Binding VariantName}"/>

                                    <!-- 'Podmínka varianty' Text and TextBox -->
                                    <TextBlock Text="Podmínka varianty" Grid.Row="0" Grid.Column="2" Margin="0,0,10,5" Grid.ColumnSpan="2"/>
                                    <TextBox x:Name="VariantCondition1"
                                        Text="{Binding VariantCondition}"
                                        Grid.Row="0" 
                                        Grid.Column="3" 
                                        Margin="91,0,14,5"/>

                                    <!-- 'Text SMS' Label -->
                                    <TextBlock Text="Text SMS" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Margin="10,10,10,5"/>

                                    <!-- 'Text SMS' TextBox with vertical scrollbar -->
                                    <TextBox 
                                        Grid.Row="2" 
                                        Grid.Column="0" 
                                        Grid.ColumnSpan="4" 
                                        Margin="10,5,10,10" 
                                        x:Name="Body" 
                                        Text="{Binding Body}"
                                        VerticalScrollBarVisibility="Visible" 
                                        TextWrapping="Wrap" VerticalContentAlignment="Stretch" MinHeight="50"/>
                                </Grid>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="Email">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left column for SMTP settings -->
                    <CheckBox x:Name="Enabled" 
                              IsChecked="{Binding EmailSettings.Enabled}"
                              Content="" 
                              Margin="0,14,10,461"
                              MinHeight="15.4"
